{
  "name": "canon",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun run src/cli/index.ts",
    "start": "bun run src/cli/index.ts",
    "build:web": "vite build",
    "embed": "bun run scripts/embed-assets.ts",
    "build": "bun run build:web && bun run embed && bun build --compile --outfile=canon ./src/cli/index.ts",
    "build:linux": "bun run build:web && bun build --compile --target=bun-linux-x64 --outfile=canon-linux-x64 ./src/cli/index.ts",
    "build:mac-arm": "bun run build:web && bun build --compile --target=bun-darwin-arm64 --outfile=canon-darwin-arm64 ./src/cli/index.ts",
    "build:mac-x64": "bun run build:web && bun build --compile --target=bun-darwin-x64 --outfile=canon-darwin-x64 ./src/cli/index.ts",
    "build:windows": "bun run build:web && bun build --compile --target=bun-windows-x64 --outfile=canon.exe ./src/cli/index.ts",
    "build:all": "bun run build:linux && bun run build:mac-arm && bun run build:mac-x64 && bun run build:windows"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/merge": "^6.11.2",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.12",
    "lucide-react": "^0.563.0",
    "react": "^18.3.1",
    "react-arborist": "^3.4.3",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "^5.7.3",
    "vite": "^6.0.7"
  }
}
